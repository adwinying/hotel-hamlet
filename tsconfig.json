{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/js/*"
            ]
        },
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "types": [
            "vite/client"
        ]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
